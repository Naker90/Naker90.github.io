{
  "name": "elblogdenaker",
  "version": "0.0.1",
  "description": "Blog personal",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy:index": "cp ./src/index.html dist",
    "copy:images": "cp -a ./src/images dist",
    "build": "npm run copy:index && npm run copy:images",
    "build:dev":"npm run build && webpack --config webpack/dev.config.js",
    "build:prod":"npm run build && webpack --config webpack/prod.config.js",
    "watch:build": "watch 'npm run build:dev' src",
    "dev": "npm run build && webpack-dev-server",
    "deploy:fast": "gh-pages -d dist -b gh-pages",
    "deploy": "npm run build:prod && npm run deploy:fast"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Naker90/elblogdenaker.git"
  },
  "author": "Antonio SÃ¡nchez",
  "license": "MIT",
  "devDependencies": {
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "gh-pages": "^1.1.0",
    "path": "^0.12.7",
    "style-loader": "^0.21.0",
    "watch": "^1.0.2",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  }
}
